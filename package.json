{
  "name": "ratingo-monorepo",
  "private": true,
  "packageManager": "npm@10.8.1",
  "description": "Ratingo — україномовний сервіс, який показує, що зараз дивляться у світі: фільми та серіали, їхні рейтинги, та коли виходять нові серії.",
  "author": "eurusik",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eurusik/ratingo.git"
  },
  "bugs": {
    "url": "https://github.com/eurusik/ratingo/issues"
  },
  "homepage": "https://ratingo.top",
  "keywords": [
    "ratingo",
    "nestjs",
    "nextjs",
    "drizzle-orm",
    "turbo",
    "monorepo",
    "jest",
    "eslint",
    "prettier"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:client": "turbo run build --filter=web-client",
    "dev:api": "turbo run dev --filter=api",
    "dev:client": "turbo run dev --filter=web-client",
    "lint:all": "turbo run lint",
    "lint:api": "turbo run lint --filter=api",
    "lint:client": "turbo run lint --filter=web-client",
    "test:all": "turbo run test",
    "test:api": "turbo run test --filter=api -- --runInBand",
    "format": "prettier --write \"apps/**/*.{ts,tsx,md,json}\"",
    "contracts:openapi": "npm run openapi:generate --workspace=api",
    "contracts:types": "npm run generate:types --workspace=@ratingo/api-contract",
    "contracts:update": "npm run contracts:openapi && npm run contracts:types"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@next/third-parties": "^16.0.7",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-table": "^8.21.3",
    "@tiptap/extension-image": "^3.13.0",
    "@tiptap/extension-link": "^3.13.0",
    "@tiptap/extension-placeholder": "^3.13.0",
    "@tiptap/extension-underline": "^3.13.0",
    "@tiptap/react": "^3.13.0",
    "@tiptap/starter-kit": "^3.13.0",
    "@types/nprogress": "^0.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.553.0",
    "next": "16.0.10",
    "next-themes": "^0.4.6",
    "nprogress": "^0.2.0",
    "postgres": "^3.4.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.68.0",
    "redis": "^4.6.13",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@fast-check/jest": "^2.1.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fast-check": "^4.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "turbo": "latest",
    "typescript": "^5",
    "typescript-eslint": "^8.46.4"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
