# Dockerfile for Railway Cron Jobs
# Lightweight Alpine image with curl and bash
FROM alpine:3.19

# Install curl and bash
RUN apk add --no-cache curl bash

# Set working directory
WORKDIR /app

# Copy cron scripts
COPY cron-scripts/ /app/

# Make scripts executable
RUN chmod +x /app/*.sh

# Default command (will be overridden by Railway cron schedule)
CMD ["/bin/sh"]
